json('../media-queries.json')

#player-mat
  background: $dark url('../media/images/book.jpg') top left
  background-size: cover
  height: 100%
  margin: 0

  @media small
    padding-top: 5vmax
    padding-left: 5vmax
    padding-right: 1.5vmax
  @media mobile
    padding-top: 7vmax
    padding-left: 7vmax
    padding-right: 12vmax
  @media tablet
    padding-top: 7vmax
    padding-left: 7vmax
    padding-right: 10vmax
  @media sd-monitor
    padding-top: 7vmax
    padding-left: 7vmax
    padding-right: 12vmax
  @media hd-monitor
    padding-top: 7vmax
    padding-left: 7vmax
    padding-right: 12vmax


  #profile
    width: 100%
    display: inline-flex
    align-items: stretch

    #profile-placeholder
      display: inline-block
      position: relative
      border: 1px solid $dark
      width: 20vmax
      height: 20vmax

      #profile-pic
        display: inline-block
        margin-left: 5px
        width: 95%
        height: auto
        border: 5px solid $white
        box-shadow: 1px 1px grey;
        transform: rotate(-3deg)

        img
          display: block
          width: 100%

    #profile-info
      flex-grow: 1
      text-align: center
      padding: 0 0 0 1em

      .profile-label
        font-size: .8em
        line-height: 1em
        color: $dark

      #player-name
        line-height: 2em
        font-size: 1.5em
        font-weight: bold
        margin-bottom: 1em

      #player-occupation
        line-height: 2em
        font-size: 1.2em

      hr
        border-style: solid
        border-color: $dark
        margin: 0

  #physiological-index-area
    display: flex
    justify-content: space-between
    .physiological-index
      display: inline-block
      border: 1px solid $dark
      width: 11vmax
      height: 11vmax

      .index-label
        font-size: 0.6em
        border-bottom: 1px solid $dark
        text-align: center
        line-height: 1em
        padding-top: 0.3em

      .index-value
        position: relative
        height: 100%

      .health, .sanity
        cursor: pointer

      .eldritch-icon
        position: absolute
        font-size: 12vmax
        line-height: 1em

      .health
        .eldritch-icon
          left: -6%
        .stat
          color: $red
          border-color: $red
          top: 18%
          right: 3%
          transform: rotate(-15deg)

      .sanity
        .eldritch-icon
          left: -15%

        .stat
          color: $blue
          border-color: $blue
          bottom: 4%
          right: -4%
          transform: rotate(10deg)

      .index-value
        .stat
          position: absolute
          font-size: 3em
          border-radius: 50%
          border: 1px solid
          padding: 2px

          .inner-circle
            display: inline-flex
            align-items: center
            justify-content: center
            min-width: 1em
            border-radius: 50%
            border: 3px solid
            vertical-align: middle
            box-sizing: content-box

            &:before
              content:''
              float: left
              width: auto
              padding-bottom: 100%

            span
              padding-top: 0.3em

  #stats-area
    display: flex

    #attributes
      display: flex
      flex-wrap: wrap

      .attribute-container
        width: 10vmax
        height: 12vmax
        border: 1px solid $dark

        .stamp-container
          position: relative

        &.lore
          .stamp
            top: -2px
            left: 1vmax
            transform: rotate(-3deg)

          .stat
            background-color: $purple
          .eldritch-icon .inner-circle
            border-color: $purple
        &.strength
          .stamp
            top: -2px
            left: 0.5vmax
            transform: rotate(-2deg)

          .stat
            background-color: $red
          .eldritch-icon .inner-circle
            border-color: $red
        &.observation
          .stamp
            top: -2px
            left: 0.7vmax
            transform: rotate(1deg)

          .stat
            background-color: $green
          .eldritch-icon .inner-circle
            border-color: $green
        &.influence
          .stamp
            top: -2px
            left: 1vmax
            transform: rotate(-1deg)

          .stat
            background-color: $orange
          .eldritch-icon .inner-circle
            border-color: $orange
        &.will
          .stamp
            top: -1px
            left: 1vmax
            transform: rotate(-1deg)

          .stat
            background-color: $blue
          .eldritch-icon .inner-circle
            border-color: $blue

        .stamp
          border: 0.4vmax solid $light
          position: absolute
          width: 8vmax
          height: 10vmax
          box-shadow: 1px 1px grey;

          .inner-stamp
            border: 0.5vmax solid
            background: $light
            height: 100%

          .stat-container
            position: absolute
            bottom: 0%
            right: 0%
            width: 100%
            height: 100%
            overflow: hidden

            .stat
              position: absolute
              right: -2%
              bottom: -2%
              font-family: $attributefamily
              font-size: 3em
              color: $light
              display: inline-flex
              align-items: center
              justify-content: center
              border-radius: 50%
              min-width: 1em

              &:before
                content:''
                float: left
                width: auto
                padding-bottom: 100%

        .attribute-label
          font-size: 0.8em
          color: $colorText
          line-height: 1.3em
          border-bottom: 1px solid $dark
          text-align: center

        .eldritch-icon
          position: relative
          top: -0.6vmax
          font-size: 2.5em
          cursor: pointer
          border: 3px solid $light
          border-radius: 50%
          width: 100%
          height: 5vmax
          background-color: $light

          .inner-circle
            display: inline-flex
            align-items: center
            justify-content: center
            border-radius: 50%
            border: 3px solid
            width: 100%
            height: 100%
            span
              padding-top: 0.3em


.health, .strength
  color: $red

.sanity, .will
  color: $blue

.lore
  color: $purple

.influence
  color: $orange

.observation
  color: $green
