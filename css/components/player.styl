json('../media-queries.json')

#player-mat
  background: $dark url('../media/images/book.jpg') top left
  background-size: cover
  height: 100%
  margin: 0

  @media small
    padding-top: 5vmax
    padding-left: 5vmax
    padding-right: 1.5vmax
  @media mobile
    padding-top: 7vmax
    padding-left: 7vmax
    padding-right: 12vmax
  @media tablet
    padding-top: 7vmax
    padding-left: 7vmax
    padding-right: 10vmax
  @media sd-monitor
    padding-top: 7vmax
    padding-left: 7vmax
    padding-right: 12vmax
  @media hd-monitor
    padding-top: 7vmax
    padding-left: 7vmax
    padding-right: 12vmax


  #profile
    width: 100%
    display: inline-flex
    align-items: stretch

    #profile-placeholder
      display: inline-block
      position: relative
      border: 1px solid $dark
      width: 20vmax
      height: 20vmax

      #profile-pic
        display: inline-block
        margin-left: 5px
        width: 95%
        height: auto
        border: 5px solid $white
        box-shadow: 1px 1px grey;
        transform: rotate(-3deg)

        img
          display: block
          width: 100%

    #profile-info
      flex-grow: 1
      text-align: center
      padding: 0 0 0 1em

      .profile-label
        font-size: .8em
        line-height: 1em

      #player-name
        line-height: 2em
        font-size: 1.5em
        font-weight: bold
        margin-bottom: 1em

      #player-occupation
        line-height: 2em
        font-size: 1.2em

      hr
        border-style: solid
        margin: 0

  #physiological-index-area
    display: flex
    justify-content: space-between
    .physiological-index
      position: relative
      display: inline-block
      border: 1px solid $dark
      width: 11vmax
      height: 11vmax

      .index-label
        font-size: 0.6em
        border-bottom: 1px solid $dark
        text-align: center
        line-height: 1em
        padding-top: 0.3em

      .health, .sanity
        font-size: 8em
        line-height: 1em
        cursor: pointer
        position: absolute

      .health
        top: 15%
        left: -6%

      .sanity
        top: 15%
        left: -15%

      .index-value
        .stat
          position: absolute
          font-size: 3em
          border-radius: 50%
          border: 1px solid
          padding: 2px

          .inner-circle
            display: inline-flex
            align-items: center
            justify-content: center
            min-width: 1em
            border-radius: 50%
            border: 3px solid
            vertical-align: middle
            box-sizing: content-box

            &:before
              content:''
              float: left
              width: auto
              padding-bottom: 100%

            span
              padding-top: 0.3em

          &.health-stat
            color: $red
            border-color: $red
            top: 18%
            right: 3%
            transform: rotate(-15deg)
          &.sanity-stat
            color: $blue
            border-color: $blue
            bottom: 4%
            right: 0
            transform: rotate(10deg)

  #stats-area
    display: flex

    .attribute-container
      width: 8vmax
      border: 1px solid $dark

      .stat
        font-family: $attributefamily
        font-size: 3em
        color: $light
    #attributes
      display: flex
      flex-wrap: wrap

      .attribute-label
        line-height: 1.3em
        border-bottom: 1px solid $dark
        text-align: center

      .eldritch-icon
        font-size: 3em
        cursor: pointer

.health, .strength
  color: $red

.sanity, .will
  color: $blue

.lore
  color: $purple

.influence
  color: $orange

.observation
  color: $green
