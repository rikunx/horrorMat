#player-mat
  background: $dark url('../media/images/book.jpg') top left
  background-size: cover
  height: 100%
  margin: 0

  #profile-placeholder
    position: relative
    border: 1px solid $dark
    top: 5vmax
    left: 7vmax
    width: 20vmax
    height: 20vmax

    #profile-pic
      position: relative
      left: 5px
      width: 95%
      height: 95%
      border: 5px solid $white
      transform: rotate(-3deg)

