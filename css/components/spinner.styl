.spinner
  display: flex
  align-items: center;
  justify-content: center;
  bottom: 0
  left: 0
  position: absolute
  right: 0
  top: 0
  z-index: 9999

  &.fixed
    position: fixed

  > div:first-child
    z-index: 2

  .spinner-overlay
    background-color: rgba($dark, 0.3)
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 1
