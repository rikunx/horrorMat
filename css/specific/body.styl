html
  height: 100%
  color: $colorText
  font-family: $fontfamily

  @media retina-screen-2
    font-size: 1.8vmax
  @media retina-screen-3
    font-size: 1.6vmax
  @media retina-screen-4
    font-size: 1.5vmax

body
  height: 100%
  background: $white url('../media/images/wood.jpg') top center
  background-size: cover
  line-height: 2em
  margin: 0
  padding: 0
  min-height: 100%

*
  box-sizing: border-box

  &:active
    outline: 0

#app-ui, #container
  height: 100%
  min-height: 100%
  margin: 0
  padding: 0

  .fullscreen
    position: absolute
    bottom: 10px
    right: 10px
    cursor: pointer
    z-index: 1000

    &:hover
      font-size: 28px
      bottom: 8px
      right: 8px

  .eldritch-icon
    font-family: $eldritchIcons
