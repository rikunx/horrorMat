{
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "name",
        "occupation",
        "image",
        "abilities",
        "baseHealth",
        "baseSanity",
        "lore",
        "influence",
        "observation",
        "strength",
        "will",
        "improvements",
        "inventory"
      ],
      "properties": {
        "name": {
          "bsonType": "string",
          "description": "must be a string and is required"
        },
        "occupation": {
          "bsonType": "string",
          "description": "must be a string and is required"
        },
        "abilities": {
          "bsonType": "array",
          "description": "Must be an array and is required",
          "items": {
            "bsonType": "object",
            "required": ["type", "bonus"],
            "properties": {
              "type": {
                "enum": ["reroll"],
                "description": "can only be one of the enum values and is required"
              },
              "cost": {
                "bsonType": "object",
                "required": ["type", "value"],
                "properties": {
                  "type": {
                    "enum": ["clue", "health", "sanity"],
                    "description": "can only be one of the enum values and is required"
                  },
                  "value": {
                    "bsonType": "int",
                    "description": "must be an int and is required"
                  }
                }
              },
              "bonus": {
                "bsonType": "int",
                "description": "must be an int and is required"
              }
            }
          }
        },
        "image": {
          "bsonType": "string",
          "description": "must be a string and is required"
        },
        "baseHealth": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "baseSanity": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "health": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "sanity": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "lore": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "influence": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "observation": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "strength": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "will": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "improvements": {
          "bsonType": "object",
          "required": ["lore", "influence", "observation", "strength", "will"],
          "properties": {
            "lore": {
              "bsonType": "int",
              "minimum": 0,
              "maximum": 2,
              "description": "must be an int and is required"
            },
            "influence": {
              "bsonType": "int",
              "minimum": 0,
              "maximum": 2,
              "description": "must be an int and is required"
            },
            "observation": {
              "bsonType": "int",
              "minimum": 0,
              "maximum": 2,
              "description": "must be an int and is required"
            },
            "strength": {
              "bsonType": "int",
              "minimum": 0,
              "maximum": 2,
              "description": "must be an int and is required"
            },
            "will": {
              "bsonType": "int",
              "minimum": 0,
              "maximum": 2,
              "description": "must be an int and is required"
            }
          }
        },
        "inventory": {
          "bsonType": "array",
          "description": "must be an array and is required"
        }
      }
    }
  }
}
