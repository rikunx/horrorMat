{
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "name",
        "occupation",
        "image",
        "abilities",
        "baseHealth",
        "baseSanity",
        "lore",
        "influence",
        "observation",
        "strength",
        "will",
        "inventory"
      ],
      "properties": {
        "name": {
          "bsonType": "string",
          "description": "the name of the character"
        },
        "occupation": {
          "bsonType": "string",
          "description": "the character's occupation"
        },
        "abilities": {
          "bsonType": "array",
          "description": "abilities that contribute to number of dice rolled",
          "items": {
            "bsonType": "object",
            "required": ["situation", "attribute", "bonus"],
            "properties": {
              "situation": {
                "enum": ["combat", "test", "attribute", "reroll"],
                "description": "can only be one of the enum values and is required"
              },
              "cost": {
                "bsonType": "object",
                "description": "the cost for using the ability",
                "required": ["type", "value"],
                "properties": {
                  "type": {
                    "enum": ["clue", "health", "sanity", "location"],
                    "description": "can only be one of the enum values and is required"
                  },
                  "value": {
                    "bsonType": ["int", "string"],
                    "description": "must be an int or string and is required"
                  }
                }
              },
              "attribute": {
                "enum": ["strength", "will", "lore", "influence", "observation", "any"],
                "description": "can only be one of the enum values and is required"
              },
              "bonus": {
                "bsonType": "int",
                "description": "how many extra rolls result from this ability"
              },
              "oncePerRound": {
                "type": "boolean",
                "description": "must be a boolean and is required"
              }
            }
          }
        },
        "image": {
          "bsonType": "string",
          "description": "must be a string and is required"
        },
        "baseHealth": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "baseSanity": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "lore": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "influence": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "observation": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "strength": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "will": {
          "bsonType": "int",
          "description": "must be an int and is required"
        },
        "inventory": {
          "bsonType": "object",
          "properties": {
            "items": {
              "bsonType": "array",
              "description": "must be an array and is required"
            },
            "clues": {
              "bsonType": "int",
              "description": "must be an int and is required"
            }
          }
        }
      }
    }
  }
}
